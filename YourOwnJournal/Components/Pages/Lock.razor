@page "/lock"
@inject AppState AppState
@inject NavigationManager NavigationManager

<div class="card-soft">
    <h3>Lock Journal</h3>
    <div class="text-muted">Lock the app immediately.</div>
    <button class="btn btn-primary mt-3" @onclick="LockNow">Lock now</button>
</div>

@code {
    private void LockNow()
    {
        AppState.SetLocked(true);
        NavigationManager.NavigateTo("/");
    }
}
